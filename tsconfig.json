{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "types": ["vite/client", "node", "react", "react-dom"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ]
}
